@{
    Layout = "~/Views/Shared/_SharedDashboardLayout.cshtml";
    ViewBag.Title = "Index";
}

<head>

</head>
<body>
    <div class="row">
        <div class="col-lg-10">
            <h6 class="element-header">
                Rule List
            </h6>
            <div class="element-content">
                <div class="row">

                    <div class="element-box" style="width:100%">
                        <div class="container-fluid">
                            <div class="table-responsive">
                                <table width="100%" class="table table-striped table-lightfont" id="tableProjects">
                                    <thead>
                                        <tr>
                                            <th>No.</th>
                                            <th>Rule Name</th>
                                            <th>Action</th>
                                        </tr>

                                    </thead>
                                    <tbody class="tbody"></tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <div class="col-lg-2">
            <div class="element-wrapper">
                <h6 class="element-header">
                    Quick Actions
                </h6>
                <div class="element-box-tp">
                    <div class="el-buttons-list full-width">
                        <button class="btn btn-white btn-sm" data-target="#modelAddNew" data-toggle="modal" onclick="ClearScreen()" type="button"><i class="os-icon os-icon-delivery-box-2"></i> Add Rule</button>
                        <button class="btn btn-white btn-sm" onclick="LoadIndexRule()" type="button"><i class="os-icon os-icon-grid-18"></i> Refresh</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div aria-hidden="true" aria-labelledby="exampleModalLabel" class="modal fade" id="modelAddNew" role="dialog" tabindex="-1" data-backdrop="false">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">
                        Rules
                    </h5>
                    <button aria-label="Close" class="close" data-dismiss="modal" type="button">
                        <span aria-hidden="true"></span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <input hidden="hidden" id="id" class="form-control" type="text">
                            <label for="">Rule Name</label>
                            <input id="Rule_Name" class="form-control" placeholder="Rule Name" type="text">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" data-dismiss="modal" type="button"> Close</button>
                    <button id="Save" onclick="Validate();" class="btn btn-primary" type="button"> Save changes</button>
                    <button id="Update" onclick="Validate();" class="btn btn-primary" type="button"> Update changes</button>
                </div>
            </div>
        </div>
    </div>

    <br /><br /><br /><br /><br /><br /><br />
</body>

@section Scripts {
    <script src="~/Content/jquery/jquery.min.js"></script>
    <script src="https://momentjs.com/downloads/moment-with-locales.js"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script src="~/Content/sweetalert/sweetalert.min.js"></script>
    <link href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.css" rel="stylesheet">
    <link href="~/Content/sweetalert/sweetalert.css" rel="stylesheet" />
    <script src="~/Content/datatables/jquery.dataTables.min.js"></script>
    <link href="~/Content/datatables/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/Scripts/Admin/RuleScript.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
}

