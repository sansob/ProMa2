@{
    ViewBag.Title = "Status List";
    Layout = "~/Views/Shared/_SharedDashboardLayout.cshtml";
}

<div class="row">
    <div class="col-lg-10">
        <h6 class="element-header">
            <h3>Status List</h3>
        </h6>
        <div class="element-content">
            <div class="row">

                <div class="element-box" style="width:100%">
                    <div class="container-fluid">
                        <div class="table-responsive">
                            <table width="100%" class="table  table-lightfont" id="tableProjects">
                                <thead >
                                <tr>
                                    <th>No.</th>
                                    <th>Status Name</th>
                                    <th>Status Module</th>
                                    <th>Action</th>
                                </tr>

                                </thead>
                                <tbody class="tbody"></tbody>
                            </table>
                        </div>

                    </div>

                </div>

            </div>
        </div>
    </div>

    <div class="col-lg-2">
        <div class="element-wrapper">
            <h6 class="element-header">
                Quick Actions
            </h6>
            <div class="element-box-tp">
                <div class="el-buttons-list full-width">
                    <button class="btn btn-white btn-sm" data-target="#modelAddNew" data-toggle="modal" onclick="ClearScreen()" type="button"><i class="os-icon os-icon-delivery-box-2"></i> Add Status</button>
                    <button class="btn btn-white btn-sm" onclick="LoadIndexProject()" type="button"><i class="os-icon os-icon-grid-18"></i> Refresh</button>
                </div>
            </div>
        </div>
    </div>
</div>


<div aria-hidden="true" aria-labelledby="exampleModalLabel" class="modal fade" id="modelAddNew" role="dialog" tabindex="-1">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">
                    Projects
                </h5>
                <button aria-label="Close" class="close" data-dismiss="modal" type="button">
                    <span aria-hidden="true"> &times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <input hidden="hidden" id="id" class="form-control" type="text">
                        <label for="">Status Name</label><input id="status_name" class="form-control" placeholder="Status Name" type="text" required="required">
                    </div>
                    <div class="form-group">
                                            <input hidden="hidden" id="id" class="form-control" type="text">
                                            <label for="">Status Mdule</label><input id="status_module" class="form-control" placeholder="Status Module" type="text" required="required">
                                        </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" data-dismiss="modal" type="button"> Close</button>
                <button id="Save" onclick="Validate();" class="btn btn-primary" type="button"> Save changes</button>
                <button id="Update" onclick="Validate();" class="btn btn-primary" type="button"> Update changes</button>
            </div>
        </div>
    </div>
</div>

<br/><br/><br/><br/><br/><br/><br/>

